{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
    	"no-console": "off",
        "indent": [
            "off",
            "tab"
        ],
        "no-mixed-spaces-and-tabs": 
        [
            0, 
            "smart-tabs"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]       
    }
}
